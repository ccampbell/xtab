{
    "manifest_version": 2,
    "name": "xTab",
    "author": "Craig Campbell",
    "version": "0.2.0",
    "description": "Limit maximum number of open tabs",
    "icons": {
        "16": "destroy19.png",
        "48": "destroy48.png",
        "128": "destroy128.png"
    },
    "permissions": ["tabs"],
    "browser_action": {
        "default_title": "xTab",
        "default_icon": "destroy38.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["raindrop.min.js", "destroyer.js"]
    }
}
